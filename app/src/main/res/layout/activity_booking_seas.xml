            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ticket_booking_shap">

                <TextView
                    android:id="@+id/cinema_title_BS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" City Stars Cinema"
                    android:textColor="@color/white_txt"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/location"
                    android:padding="10dp"/>
                <Spinner
                    android:id="@+id/spiner_date"
                    android:layout_below="@id/cinema_title_BS"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:background="@drawable/spinar_snap">
                </Spinner>
                <Spinner
                    android:id="@+id/spiner_time"
                    android:layout_below="@id/spiner_date"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:background="@drawable/spinar_snap">
                </Spinner>

                <Spinner
                    android:id="@+id/spiner_choose_screen"
                    android:layout_below="@id/spiner_time"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:background="@drawable/spinar_snap">
                </Spinner>

                <Button
                    android:id="@+id/ChoosePayment_btn_BS"
                    android:layout_below="@id/spiner_choose_screen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_payment"
                    android:textColor="@color/white_txt"
                    android:textAllCaps="false"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="8dp"
